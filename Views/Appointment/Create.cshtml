@model AppointmentCreate
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Appointment</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">E-Mail</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Firma</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Company">
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Zeit</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="Date">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Time</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="Time">
                        <option value="" disabled selected>Select a time</option>
                        @for (int hour = 9; hour < 17; hour++)
                        {
                        <option value="@TimeSpan.FromHours(hour).ToString()">@($"{hour:00}:00")</option>
                        <option value="@TimeSpan.FromHours(hour + 0.5).ToString()">@($"{hour:00}:30")</option>
                        }
                        <option value="@TimeSpan.FromHours(17).ToString()">17:00</option>
                    </select>
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Beschreibung/Grund</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Termin anfragen</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Appointment" asp-action="Index" role="button">
                        Abbrechen
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
